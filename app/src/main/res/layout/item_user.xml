<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_user"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/border_list_items"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/item_user_info"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_user_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_profile"
            android:backgroundTint="#646970" />

        <Button
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/colorBeige"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/item_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/item_user_ellipses"
        android:layout_toLeftOf="@+id/item_user_ellipses"
        android:src="@drawable/ic_messages"
        android:tint="@color/colorRed" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/item_user_ellipses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_ellipses"
        android:tint="@color/colorRed" />


</RelativeLayout>
